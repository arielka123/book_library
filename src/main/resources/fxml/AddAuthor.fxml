<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.moja.biblioteczka.controllers.AuthorController">
    <padding>
        <Insets bottom="20.0"/>
    </padding>
    <HBox alignment="CENTER" spacing="20.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="%name.author"/>
        <TextField fx:id="nameTextField"/>
        <Label text="%surname.author"/>
        <TextField fx:id="surnameTextField"/>
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#OnActionAddAuthor" text="%add.button"/>
    </HBox>
    <TableView fx:id="authorTableView" editable="true" tableMenuButtonVisible="true">
      <columns>
          <TableColumn fx:id="nameColumn" minWidth="-1.0" onEditCommit="#OnEditCommitName" prefWidth="300.0"
                       text="%name.author"/>
          <TableColumn fx:id="surnameColumn" minWidth="-1.0" onEditCommit="#OnEditCommitSurname"
                       prefWidth="297.3333740234375" text="%surname.author"/>
      </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <VBox.margin>
          <Insets/>
        </VBox.margin>
    </TableView>
</VBox>
